@model SoftTech.Models.Entites.Salary

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Fecha Pago:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id_payrollNavigation.date_payroll)
        </dd>
        <dt class="col-sm-2">
            Empleado:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id_employeeNavigation.name_emp)
        </dd>
        <dt class = "col-sm-2">
            Horas Extra:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.horas_e)
        </dd>
        <dt class = "col-sm-2">
            Salario Bruto:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.gross_salary)
        </dd>
        <dt class = "col-sm-2">
            Impuesto Renta Salario:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.income_tax)
        </dd>
        <dt class = "col-sm-2">
            CCSS
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ccss_amount)
        </dd>
        <dt class = "col-sm-2">
            Salario Neto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.net_salary)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Regresar</a>
</div>
