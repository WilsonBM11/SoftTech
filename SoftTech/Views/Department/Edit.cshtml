@model SoftTech.Models.Entites.Department

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="name_depto" class="control-label">Nombre</label>
                <input asp-for="name_depto" class="form-control" />
                <span asp-validation-for="name_depto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description_depto" class="control-label">Descripcion</label>
                <input asp-for="description_depto" class="form-control" />
                <span asp-validation-for="description_depto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
