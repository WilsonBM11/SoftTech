@model SoftTech.Models.Entites.Payroll

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<div>
    <h4>Payroll</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Fecha Nomina
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.date_payroll)
        </dd>
        <dt class = "col-sm-2">
            Impuesto Renta Salarios
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.income_tax)
        </dd>
        <dt class = "col-sm-2">
            CCSS Patrono
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.employer_ccss)
        </dd>
        <dt class = "col-sm-2">
            CCSS Empleados
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.employee_ccss)
        </dd>
        <dt class = "col-sm-2">
            Total Salarios
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.total_salary)
        </dd>
        <dt class = "col-sm-2">
            Total a Pagar
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.total_payment)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
