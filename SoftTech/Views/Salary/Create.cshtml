@model SoftTech.Models.Entites.Salary

@{
    ViewData["Title"] = "Create";
}

<h1>Crear salario</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id_employee" class="control-label">Empleado:</label>
                <select asp-for="id_employee" class="form-control">
                    <option selected disabled>Seleccione al empleado</option>
                    @foreach (var item in ViewBag.Employees)
                    {
                        <option value="@item.id">@item.name_emp</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="horas_e" class="control-label">Horas Extra:</label>
                <input asp-for="horas_e" class="form-control" />
                <span asp-validation-for="horas_e" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="id_payroll" class="form-control" value="@ViewBag.Payroll.id" hidden/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
